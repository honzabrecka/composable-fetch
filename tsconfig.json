{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "rootDir": "./",
    "outDir": "dist",
    "target": "es5",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types", "types"]
  },
  "include": [
    "index.ts"
  ],
  "exclude": [
    "dist"
  ]
}
